<% form_for @recipe, url_for(:recipes, :create) do |f| %>
  <%= partial '/recipes/forms', :locals => {:f => f} %>

  <%= f.submit %>
<% end %>

<script>
    function unhideFields(b) {
        a = b.parentNode;
        a = a.parentNode;
        a = a.nextElementSibling;
        a.setAttribute("class", "");
        return false;
    };
</script>