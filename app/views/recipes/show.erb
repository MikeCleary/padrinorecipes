<h2 class="recipe_title"><%= @recipe.title %></h2>

<img class="recipe_pic" src=<%= "#{@recipe.img_url}" %>>

<p><%= @recipe.description %></p>
<p>Preperation time: <%= @recipe.prep_time %></p>
<p>Cooking time: <%= @recipe.cook_time %></p>

<h3 class="subheading">Ingredients</h3>
<ul class="recipe_ingredients">
  <% @recipe.ingredients.each do |ingredient| %>
    <li class="ingredient"><%= ingredient.ingredient %></li>
  <% end %>
</ul>

<h3 class="subheading">Method</h3>
<ul class="recipe_steps">
  <% @recipe.steps.each do |step| %>
    <li class="step"><%= step %></li>
  <% end %>
</ul>
