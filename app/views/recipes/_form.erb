<dl class="recipe_form">

  <dt><%= f.label :title %></dt>
  <dd><%= f.text_field :title %></dd>

  <dt><%= f.label :decription %></dt>
  <dd><%= f.text_area :description %></dd>

  <dt><%= f.label :prep_time %></dt>
  <dd><%= f.text_field :prep_time %></dd>

  <dt><%= f.label :cook_time %></dt>
  <dd><%= f.text_field :cook_time %></dd>

  <dt><%= f.label :serves %></dt>
  <dd><%= f.text_field :serves %></dd>

  <dt><%= f.label :image %></dt>
  <dd><%= f.text_field :img_url %></dd>

  <% count = 0 %>
  <% f.fields_for :ingredients do |i| %>
    <div class=<%= count < 1 ? '' : 'hidden_field' %> >
      <dt><%= i.label :ingredient %></dt>
      <dd>
        <%=i.text_field :ingredient %>
        <a href="javascript:" onClick="unhideFields(this)">Add Ingredient</a>
      </dd>
    </div>
    <% count += 1 %>
  <% end %>
  <% other_count = 1 %>
  <% f.fields_for :steps do |s| %>
    <div class=<%= other_count < 2 ? '' : 'hidden_field' %> >
      <dt ><%= s.label "Step #{other_count}" %></dt>
      <dd>
        <%= s.text_field :steps %>
        <a href="javascript:" onClick="unhideFields(this)">Add Ingredient</a>
      </dd>
    </div>
    <% other_count += 1 %>
  <% end %>
</dl>